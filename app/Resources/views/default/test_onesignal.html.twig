{% extends 'base.html.twig' %}

{% block body %}
    <div id="container">
        <div class="col-lg-12">
            <div class="col-lg-8">
                <h1>Welcome to Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</h1>
                <ul>
                    {% for message in messages %}
                        <li>{{ message }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-lg-4">
                <a class="btn btn-success" href="{{ path("homepage") }}">Back to homepage</a>
            </div>
        </div>
    </div>
{% endblock %}


