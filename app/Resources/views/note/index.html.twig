{% extends 'base.html.twig' %}

{% trans_default_domain 'note' %}

{% block title %}{{ 'note.notes'|trans }}{% endblock %}

{% block body %}
            <h1>{{ 'note.notes'|trans }}</h1>

            <a href="{{ path('note_new') }}" class="btn btn-lg btn-primary wow fadeInUp">{{ 'note.createNewBtn'|trans }}</a>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>{{ 'general.id'|trans({},'general') }}</th>
                        <th>{{ 'general.title'|trans({},'general') }}</th>
                        <th>{{ 'general.description'|trans({},'general') }}</th>
                        <th>{{ 'general.userId'|trans({},'general') }}</th>
                        <th>{{ 'general.created'|trans({},'general') }}</th>
                        <th>{{ 'general.actions'|trans({},'general') }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for note in notes %}
                    <tr>
                        <td><a href="{{ path('note_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                        <td>{{ note.title }}</td>
                        <td>{{ note.description }}</td>
                        <td>{{ note.userId }}</td>
                        <td>{% if note.created %}{{ note.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <a href="{{ path('note_show', { 'id': note.id }) }}">{{ 'general.show'|trans({},'general') }}</a>
                             |
                            <a href="{{ path('note_edit', { 'id': note.id }) }}">{{ 'general.edit'|trans({},'general') }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('note_new') }}" class="btn btn-lg btn-primary wow fadeInUp">{{ 'note.createNewBtn'|trans }}</a>

        </div>
    </div>
{% endblock %}
