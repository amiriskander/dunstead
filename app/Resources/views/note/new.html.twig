{% extends 'base.html.twig' %}

{% trans_default_domain 'note' %}

{% block title %}{{ 'note.addNewPage'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'note.addNewPage'|trans }}</h1>

    {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.title, 'note.title'|trans ) }}
            {{ form_widget(form.title) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'note.description'|trans ) }}
            {{ form_widget(form.description) }}
        </div>

        <input type="submit" class="btn btn-primary btn-raised" value="Create" />
        <a href="{{ path('note_index') }}" class="btn btn-raised btn-danger">{{ 'general.cancel'|trans({},'general') }}</a>
    {{ form_end(form) }}

{% endblock %}
