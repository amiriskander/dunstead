{% extends 'base.html.twig' %}

{% trans_default_domain 'note' %}

{% block body %}
    <h1>{{ 'note.editPage'|trans({'%note%':note.title}) }}</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.title, 'note.title'|trans ) }}
        {{ form_widget(form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description, 'note.description'|trans ) }}
        {{ form_widget(form.description) }}
    </div>

    <input type="submit" class="btn btn-primary btn-raised" value="Edit" />
    {{ form_end(form) }}

    <a href="{{ path('note_index') }}" class="btn btn-raised btn-danger">{{ 'general.cancel'|trans({},'general') }}</a>
    {{ form_start(delete_form) }}
    <input type="submit" value="Delete">
    {{ form_end(delete_form) }}

{% endblock %}
